@page
@model Bank_AB.Pages.Transactions.TransferModel
@{
}

<a class="back-btn" asp-page="/Customers/AccountDetails" asp-route-id="@Model.AccountId">Tillbaka till konto</a>



<div class="card">
    <div class="card-header">
        <h1>Insättning</h1>
    </div>
    <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="TransAccountId">Ange konto att överföra till:</label>
                    <select class="form-control" asp-for="TransAccountId" asp-items="@Model.AllAccounts"></select>
                    <span asp-validation-for="TransAccountId" class="field-validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Amount">Ange Belopp</label>
                    <input class="form-control" asp-for="Amount"/>
                    <span asp-validation-for="Amount" class="field-validation-error"></span>
                </div>

                <button class="btn btn-outline-primary" type="submit">Slutför Överföring</button>
            </form>
    </div>
</div>