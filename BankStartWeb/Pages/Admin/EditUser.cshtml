@page
@model Bank_AB.Pages.Admin.EditModel
@{
}


<div class="card">
    <div class="card-header">
        <h3>Redigera användare</h3>
    </div>
    <div class="card-body">
        <form method="post">
            
            
            <input asp-for="ThisUser.Id" value="@Model.ThisUser.Id"/>

            <div class="form-group">
                <label asp-for="ThisUser.UserName">Namn: </label>
                <input class="form-control" asp-for="ThisUser.UserName"/>
                <span asp-validation-for="ThisUser.UserName" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThisUser.Email">Email: </label>
                <input class="form-control" asp-for="ThisUser.Email"/>
                <span asp-validation-for="ThisUser.Email" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThisUser.PhoneNumber">Telefonnummer: </label>
                <input class="form-control" asp-for="ThisUser.PhoneNumber"/>
                <span asp-validation-for="ThisUser.PhoneNumber" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ThisUser.EmailConfirmed">Validerat Email: </label>
                <input class="checkbox" asp-for="ThisUser.EmailConfirmed"/>
                <span asp-validation-for="ThisUser.EmailConfirmed" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ThisUser.TwoFA">Tvåfaktorsautentisering: </label>
                <input class="checkbox" asp-for="ThisUser.TwoFA"/>
                <span asp-validation-for="ThisUser.TwoFA" class="field-validation-error"></span>
            </div>

            <div class="border-info">
                <div class="form-group">
                    <label asp-for="IsAdmin">Admin: </label>
                    <input class="checkbox" asp-for="IsAdmin"/>
                    <span asp-validation-for="IsAdmin" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IsCashier">Kassör: </label>
                    <input class="checkbox" asp-for="IsCashier"/>
                    <span asp-validation-for="IsCashier" class="field-validation-error"></span>
                </div>
            </div>
            <button class="btn btn-outline-primary" type="submit">Spara ändringar</button>

        </form>
    </div>


</div>