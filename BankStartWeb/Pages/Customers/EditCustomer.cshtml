@page
@model Bank_AB.Pages.Customers.EditCustomerModel
@{
}
<a class="back-btn" asp-page="/Customers/CustomerDetails" asp-route-id="@Model.Id">Tillbaka till konto</a>


<form method="post">
    <section class="input-row-50">
        <div class="form-group">
            <label asp-for="Givenname">Förnamn: </label>
            <input class="form-control" asp-for="Givenname" autocomplete="off"/>
            <span asp-validation-for="Givenname" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Efternamn: </label>
            <input class="form-control" asp-for="Surname" autocomplete="off"/>
            <span asp-validation-for="Surname" class="field-validation-error"></span>
        </div>
    </section>
    <section class="input-row-50">
        <div class="form-group">
            <label asp-for="NationalId">Personnummer: </label>
            <input class="form-control" asp-for="NationalId" autocomplete="off"/>
            <span asp-validation-for="NationalId" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country">Land: </label>
            <select class="form-control" asp-for="Country" asp-items="@Model.Countries"></select>
        </div>
    </section>

    <section class="input-row-50">

        <div class="form-group">
            <label asp-for="City">Stad: </label>
            <input class="form-control" asp-for="City" />
            <span asp-validation-for="City" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Adress">Adress: </label>
            <input class="form-control" asp-for="Adress" autocomplete="off"/>
            <span asp-validation-for="Adress" class="field-validation-error"></span>
        </div>
    </section>
    <section class="input-row-50">
        <div class="form-group">
            <label asp-for="EmailAddress">Email: </label>
            <input class="form-control" asp-for="EmailAddress" autocomplete="off"/>
            <span asp-validation-for="EmailAddress" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telephone">Telefonnummer: </label>
            <input class="form-control" asp-for="Telephone" autocomplete="off"/>
            <span asp-validation-for="Telephone" class="field-validation-error"></span>
        </div>
    </section>
    <div class="form-group">
        <label asp-for="Zipcode">Postnummer: </label>
        <input class="form-control" asp-for="Zipcode" />
        <span asp-validation-for="Zipcode" class="field-validation-error"></span>
    </div>

    <!--Hidden inputs-->
    <div class="form-group">
        <input class="form-control" asp-for="Birthday" />
        <input class="form-control" asp-for="Id" />
    </div>
    

    <div class="d-flex justify-content-center">
        <button class="btn btn-primary mt-5 w-25" type="submit">Skapa</button>
    </div>

</form>